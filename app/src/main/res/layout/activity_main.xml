<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Type and Run"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            style="@style/newStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make" />

        <EditText
            android:id="@+id/txtname"
            style="@style/newStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Name" />

        <TextView
            style="@style/newStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Year" />

        <EditText
            android:id="@+id/txtyear"
            style="@style/newStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Year"
            android:inputType="number" />

        <TextView
            style="@style/newStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color:" />

        <EditText
            android:id="@+id/txtcolor"
            style="@style/newStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Color Name" />

        <TextView
            style="@style/newStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purchase price(pound):" />

        <EditText
            android:id="@+id/txtprice"
            style="@style/newStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="In pound"
            android:inputType="number" />

        <TextView
            style="@style/newStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Engine Size(liter)" />

        <EditText
            android:id="@+id/txtenginesize"
            style="@style/newStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="liter"
            android:inputType="numberDecimal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/btncreatecar"
                style="@style/btnstyle"
                android:layout_height="wrap_content"
                android:text="Create Car" />

            <Button
                android:id="@+id/btncreatediesel"
                style="@style/btnstyle"
                android:layout_height="wrap_content"
                android:text="Create Diesel" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvoutput"
                style="@style/newStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Result" />
        </ScrollView>


    </LinearLayout>
</ScrollView>